<h2>New Category</h2>

<form method="POST" id="new_category_form" action="#/categories">
  <p>
    <label for="category_name">Name</label>
    <input type="text" id="category_name" name="category[name]" />
  </p>

  <p>
    <label for="category_parent">Parent Category</label>
    <select id="category_parent" name="category[parent][name]">
      {{#categories}}
        <option>{{name}}</option>
      {{/categories}}
    </select>
  </p>
  
  <p>
    <input type="submit" value="Add Category" />
  </p>
</form>