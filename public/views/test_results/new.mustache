<h2>Take the test!</h2>

<form method="POST" action="#/test_results" id="new_test_result_form">
  {{#questions}}
    <p>
      {{question}}<br />
      <input type="radio" id="test_result_questions_{{id}}_1" name="test_result[questions][{{id}}]" value="1" />
      <label for="test_result_questions_{{id}}_1">{{answer_1}}</label>
      
      <input type="radio" id="test_result_questions_{{id}}_2" name="test_result[questions][{{id}}]" value="2" />
      <label for="test_result_questions_{{id}}_2">{{answer_2}}</label>
    </p>  
  {{/questions}}
  
  <p>
    <input type="submit" value="Show me my personality!" />
  </p>
</form>