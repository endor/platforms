<div id="details_centering">
	<div id="details_rightflow">
		<div id="details">
			<a href="" class="view_indicator slide_right_out"></a>
		
			<div class="left_column">
        {{#images}}
          <img src="{{middle}}" />
        {{/images}}
				
				<a href="" title="Bookmark apartment" class="check_link action_link textlink left remember_this">Bookmark!</a>
				

				<address>
	        {{street}}<br />
	        {{postcode}} {{city}}, {{country}}
	      </address>
				<a href="" title="Send message" class="send_request">Send a message</a>
	
      </div>
			
			<div class="right_column">
	      <h2>
	        {{title}}
        
	      </h2>
			
				<p>
					{{description}}
					<br>
					<span class="facebook_like"></span>
				</p>
				
				<ul>
					<li class="item">
						Price: {{price}}
					</li> 
					<li class="item">
						Number of Rooms: {{number_of_rooms}}
					</li>
					<li class="item">
						Date of Availability: {{availability}} 
					</li>
					<li class="item">
						Size: {{size}}
					</li>
					<li class="item">
						Duration: {{duration}}
					</li>
				</ul>
				
			</div>


    </div>
    
    <div id="contact_request" style="display: none;">
		<h2>Contact</h2>
		
      {{#has_phone}}
        <p>Phone: {{phone}}</p>
      {{/has_phone}}
      
      {{#has_email}}
        <form method="POST" action="/messages">
          <input type="hidden" name="apartment_id" value="{{_id}}" />
          <p>
	          <label for="message">Message:</label>
            <textarea name="message" id="message"></textarea>
          </p>
          <p>
            <input type="submit" value="Send request" class="btn" />
          </p>
        </form>
      {{/has_email}}
      
      <p>
        <a href="#" class="close_request clearfix">Go back</a>
      </p>
    </div>
	</div>
</div>